{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
    ,
    "paths": {
      "@opn/contracts": ["../shared/contracts/index"],
      "@opn/contracts/*": ["../shared/contracts/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    "src/type",
    "../shared/contracts/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
